#DIR="${BLOCK_INSTANCE:-$HOME}"
#ALERT_LOW="${1:-10}" # color will turn red under this value (default: 10%)

free_space () {
    df -h -P -l "$1" | awk '
        /\/.*/ {
        print $4
        exit 0
    }
    '
}

ROOT="$(free_space /)"
Home="$(free_space "$HOME")"

echo "ðŸ’½" "[/ $ROOT]" "[~ $Home]"

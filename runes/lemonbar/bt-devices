bluetoothctl devices | cut -f2 -d' ' | while read uuid; do bluetoothctl info $uuid; done  | awk '
$1 == "Device" {
    if (connected) {
        print(name)
    }
    name = ""; connected = false; mac = $2
}
$1 == "Name:"  { name = $2 }
$1 == "Connected:" { connected = ($2 == "yes") }

END {
    if (connected) print(name)
}
'

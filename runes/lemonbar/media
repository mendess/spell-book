#!/bin/bash
# shellcheck disable=SC2119

# shellcheck source=/home/mendess/projects/spell-book/spells/library.spell
. library

t="$(m current --short | sed '
s/　/  /g;
s/Ａ/A /g;
s/Ｃ/C /g;
s/Ｄ/D /g;
s/Ｈ/H /g;
s/Ｌ/L /g;
s/Ｎ/N /g;
s/Ｏ/O /g;
s/Ｓ/S /g;
s/Ｕ/U /g;
s/Ｙ/Y /g;
s/ａ/a /g;
s/ｃ/c /g;
s/ｅ/e /g;
s/ｆ/f /g;
s/ｉ/i /g;
s/ｋ/k /g;
s/ｌ/l /g;
s/ｍ/m /g;
s/ｏ/o /g;
s/ｐ/p /g;
s/ｒ/r /g;
s/ｓ/s /g;
' | tr -d '\n')"

case "$t" in
    Video:*Song:*)
        if [[ "$1" = small ]]; then
            t=${t/Video:*Song: /}
        else
            t="${t/Video:/\%\{F\#5498f8\}Video:\%\{F-\}}"
            t="${t/Song:/| \%\{F\#5498f8\}Song:\%\{F-\}}"
        fi
        ;;
esac

[ "$1" = small ] &&
    name="$(printf "%s" "$t" | sed -E 's/(.*)(>|\|\|).*/\1/')" &&
    rest="$(printf "%s" "$t" | sed -E 's/.*((>|\|\|).*)/\1/')" &&
    t="$(printf "%s" "$name" | sed -r 's/^(.{22}).*/\1... /')$rest"
if [ "$t" ]; then echo "♪" "$t" "♪"; fi

#!/bin/sh
# Configure my keymap, I'm too lazy to configure X and udev

case "$1" in
    mac)
        setxkbmap us -option
        setxkbmap us -option caps:escape
        ;;
    *)
        setxkbmap us -option
        setxkbmap us -option caps:escape -option altwin:swap_alt_win #-option altwin:menu_win
        ;;
esac
